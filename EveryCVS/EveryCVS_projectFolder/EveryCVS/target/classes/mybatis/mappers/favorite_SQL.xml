<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="favorite">

<resultMap id="resultFavorite" type="favorite">
		<result property="user_no" column="USER_NO" />
		<result property="brand_no" column="BRAND_NO" />
		<result property="brand_name" column="BRAND_NAME" />
		<result property="store_no" column="STORE_NO" />
		<result property="store_name" column="STORE_NAME" />
		<result property="product_no" column="PRODUCT_NO" />
		<result property="product_name" column="PRODUCT_NAME" />
		<result property="stored_file_name" column="STORED_FILE_NAME" />
		<result property="store_product_no" column="STORE_PRODUCT_NO" />
		<result property="min_expiration_hour" column="MIN_EXPIRATION_HOUR" />
		<result property="price" column="price" />
	</resultMap>

	<!-- 관심상품 목록 조회 -->
	<select id="favoriteList" parameterType="_int" resultType="list" resultMap="resultFavorite">
		<![CDATA[
			SELECT * FROM FAVORITE_LIST_VIEW
			WHERE USER_NO = #{user_no}
		]]>
	</select>
	
	<!-- 관심상품 검색 -->
	<!-- 검색 키워드 : 상호명 -->
	<select id="favoriteSearch1" parameterType="favorite" resultType="list" resultMap="resultFavorite">
		<![CDATA[
			SELECT * FROM FAVORITE_LIST_VIEW
			WHERE USER_NO = #{user_no}
			AND BRAND_NAME LIKE #{brand_name}
		]]>
	</select>
	
	<!-- 검색 키워드 : 지점명 -->
	<select id="favoriteSearch2" parameterType="favorite" resultType="list" resultMap="resultFavorite">
		<![CDATA[
			SELECT * FROM FAVORITE_LIST_VIEW
			WHERE USER_NO = #{user_no}
			AND STORE_NAME LIKE #{store_name}
		]]>
	</select>
	
	<!-- 검색 키워드 : 상품명 -->
	<select id="favoriteSearch3" parameterType="favorite" resultType="list" resultMap="resultFavorite">
		<![CDATA[
			SELECT * FROM FAVORITE_LIST_VIEW
			WHERE USER_NO = #{user_no}
			AND PRODUCT_NAME LIKE #{product_name}
		]]>
	</select>
	
	<!-- 관심상품 삭제 -->
	<delete id="favoriteDelete" parameterType="favorite" flushCache="true">
		<![CDATA[
			DELETE FROM TB_FAVORITE_LIST
			WHERE USER_NO = #{user_no}
			AND STORE_NO = #{store_no, jdbcType=VARCHAR}
			AND PRODUCT_NO = #{product_no}
		]]>
	</delete>


</mapper>